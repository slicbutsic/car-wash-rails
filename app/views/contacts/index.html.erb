<div class="w-full h-144 px-4 sm:px-6 lg:px-8 bg-cover bg-center relative" style="background-image: url('<%= asset_path('bg-services.png') %>'); opacity: 0.9;">
  <!-- Container for the content -->
  <div class="flex items-center justify-center w-full h-full">
    <div class="bg-white p-6 rounded-lg shadow-lg w-96 h-96 max-w-3xl ml-38 mb-14">
      <!-- Contact Information -->
      <div class="mb-6">
        <h1 class="text-2xl font-semibold text-gray-900 mb-2">Find us.</h1>
        <div class="flex items-center text-sm text-gray-700 mb-2">
          <%= render 'address' %>
          <span class="ml-2">97 Flockton St, Everton Park QLD 4053</span>
        </div>
        <div class="flex items-center text-sm text-gray-700 mb-2">
          <%= render 'phone' %>
          <span class="ml-2">0435 903 054</span>
        </div>
      </div>

      <!-- Opening Hours -->
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
          <span class="mr-2">Opening Hours</span>
          <%= render 'clock' %>
        </h2>

        <!-- Opening hours list -->
        <ul class="space-y-2">
          <li class="flex justify-between text-sm text-gray-700">
            <span>Monday to Friday</span>
            <span class="font-medium">8:00 am – 5:00 pm</span>
          </li>
          <li class="flex justify-between text-sm text-gray-700">
            <span>Saturday</span>
            <span class="font-medium">8:30 am – 5:00 pm</span>
          </li>
          <li class="flex justify-between text-sm text-gray-700">
            <span>Sunday</span>
            <span class="font-medium">8:30 am – 4:30 pm</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%# Map %>
<div class="w-full h-[400px] mx-auto rounded-lg overflow-hidden shadow-lg mb-10">
  <%= js_map [{latitude: -27.394294, longitude: 152.996909, label: 'Limco Carwash'}], zoom: 15 %>
</div>
