<!-- Hero Image Section -->
<div class="w-full h-screen bg-cover bg-center relative" style="background-image: url('<%= asset_path('car.jpg') %>')">
  <div class="absolute bottom-10 right-10 text-white text-right">
    <h1 class="text-5xl font-thin">Feel like new again</h1>
  </div>
</div>




<!-- Introduction Section -->
<div class="py-12 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-medium leading-7 text-gray-900 mb-4">Limco Car Wash Services</h2>
    <p class="text-lg text-gray-600 mb-8">
      Whether you're looking for a quick refresh or a premium detailing experience that brings back your car's showroom sparkle, we offer a range of services designed to meet the needs of every driver.    </p>
  </div>
</div>

<!-- Features Section -->
<div class="py-12 bg-gray-100">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-medium leading-7 text-gray-900 mb-4">Our Features</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <div class="flex flex-col items-center p-6 bg-white rounded-lg shadow-md">
        <svg class="w-12 h-12 text-indigo-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 17v-4m0 0v4m0 0H8m8-4H8m8 4a2 2 0 11-4 0m4 0a2 2 0 01-4 0"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900">Easy Online Booking</h3>
        <p class="text-sm text-gray-600">Schedule your car wash in just a few clicks with our user-friendly online booking system.</p>
      </div>

      <div class="flex flex-col items-center p-6 bg-white rounded-lg shadow-md">
        <svg class="w-12 h-12 text-indigo-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900">State-of-the-Art Equipment</h3>
        <p class="text-sm text-gray-600">Our facilities are equipped with the latest technology for efficient cleaning.</p>
      </div>

      <div class="flex flex-col items-center p-6 bg-white rounded-lg shadow-md">
        <svg class="w-12 h-12 text-indigo-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2m0-4h2a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2v-4a2 2 0 012-2z"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900">Customer Service</h3>
        <p class="text-sm text-gray-600">Our friendly staff are always ready to assist you.</p>
      </div>
    </div>
  </div>
</div>


<!-- Call to Action Section -->
<div class="py-12 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-medium leading-7 text-gray-900 mb-4">Get Started</h2>
    <p class="text-lg text-gray-600 mb-8">Book your car wash today and experience the difference!</p>
    <%= link_to "Book Now", new_booking_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-light px-9 py-4 rounded-md cursor-pointer transition-all focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 active:scale-95" %>
  </div>
</div>


<div class="container mx-auto p-6">
  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-blue-500 text-white p-4 rounded-lg shadow-lg">
      <h5 class="text-lg font-bold">Total Bookings</h5>
      <p class="text-2xl">Today: 12 | This Month: 120</p>
    </div>
    <div class="bg-green-500 text-white p-4 rounded-lg shadow-lg">
      <h5 class="text-lg font-bold">Revenue</h5>
      <p class="text-2xl">$5,000 This Month</p>
    </div>
    <div class="bg-yellow-500 text-white p-4 rounded-lg shadow-lg">
      <h5 class="text-lg font-bold">Upcoming Appointments</h5>
      <p class="text-2xl">5 Scheduled Today</p>
    </div>
    <div class="bg-red-500 text-white p-4 rounded-lg shadow-lg">
      <h5 class="text-lg font-bold">Customer Reviews</h5>
      <p class="text-2xl">⭐⭐⭐⭐⭐ (4.8/5)</p>
    </div>
  </div>

  <!-- Bookings Table -->
  <div class="mt-6">
    <div class="bg-gray-800 text-white p-4 rounded-lg shadow-lg">
      <h3 class="text-xl font-bold">Upcoming Bookings</h3>
    </div>
    <table class="mt-4 min-w-full table-auto border-collapse">
      <thead class="bg-gray-100 text-gray-700">
        <tr>
          <th class="px-6 py-2 text-left">Customer</th>
          <th class="px-6 py-2 text-left">Car Model</th>
          <th class="px-6 py-2 text-left">Service</th>
          <th class="px-6 py-2 text-left">Date</th>
          <th class="px-6 py-2 text-left">Status</th>
        </tr>
      </thead>
      <tbody>
        <tr class="border-b">
          <td class="px-6 py-2">John Doe</td>
          <td class="px-6 py-2">Toyota Camry</td>
          <td class="px-6 py-2">Exterior Wash</td>
          <td class="px-6 py-2">March 21, 2025</td>
          <td class="px-6 py-2"><span class="bg-green-500 text-white py-1 px-3 rounded-full">Scheduled</span></td>
        </tr>
        <tr class="border-b">
          <td class="px-6 py-2">Jane Smith</td>
          <td class="px-6 py-2">Honda Civic</td>
          <td class="px-6 py-2">Interior Wash</td>
          <td class="px-6 py-2">March 22, 2025</td>
          <td class="px-6 py-2"><span class="bg-yellow-500 text-white py-1 px-3 rounded-full">Pending</span></td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Google Map -->
  <div class="mt-6">
    <div class="bg-gray-800 text-white p-4 rounded-lg shadow-lg">
      <h3 class="text-xl font-bold">Car Wash Location</h3>
    </div>
    <div id="map" class="mt-4 h-64"></div>
  </div>

  <!-- Revenue Chart -->
  <div class="mt-6">
    <div class="bg-gray-800 text-white p-4 rounded-lg shadow-lg">
      <h3 class="text-xl font-bold">Revenue Chart</h3>
    </div>
    <canvas id="revenueChart" class="mt-4"></canvas>
  </div>
</div>
