<div class="mt-4 mb-6 flex flex-col gap-6 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <h2 class="text-2xl poppins-medium text-gray-900 mb-2">All Bookings</h2>

  <% if @bookings.any? %> <!-- Check if there are bookings -->
    <% @bookings.each do |booking| %>
      <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <!-- Booking Header -->
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl poppins-medium leading-7 text-gray-900 sm:text-2xl sm:leading-9">
            Booking ID: <%= booking.id %>
          </h3>
          <div>
            <%= link_to 'Delete', booking_path(booking), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'poppins-small css-bg' %>
          </div>
        </div>

        <!-- Booking Details -->
        <div class="mb-2">
          <p class="text-sm text-gray-700 mb-2">
            Service: <span class="font-medium"><%= booking.service.name %></span>
          </p>
          <p class="text-sm text-gray-700 mb-2">
            Customer: <span class="font-medium"><%= booking.user.first_name %> <%= booking.user.last_name %></span>
          </p>
          <p class="text-sm text-gray-700 mb-2">
            Phone: <span class="font-medium"><%= booking.phone %></span>
          </p>
          <p class="text-sm text-gray-700 mb-2">
            Email: <span class="font-medium"><%= booking.user.email %></span>
          </p>
          <p class="text-sm text-gray-700 mb-2">
            Vehicle Type: <span class="font-medium"><%= booking.vehicle_type.name %></span>
          </p>
          <p class="text-sm text-gray-700 mb-2">
            Price: <span class="font-medium">$<%= number_with_precision(booking.price.price, precision: 2) %></span>
          </p>
          <p class="text-sm text-gray-700 mb-2">
            Date & Time: <span class="font-medium"><%= booking.booking_datetime.strftime("%B %d, %Y at %I:%M %p") %></span>
          </p>
        </div>
      </div>
    <% end %>
  <% else %> <!-- Show message when no bookings are available -->
    <div class="text-center text-lg font-medium text-gray-500">
      No bookings.
    </div>
  <% end %>
</div>
