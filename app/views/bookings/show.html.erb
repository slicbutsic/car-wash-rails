<div class="container mt-5 mb-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8"> <!-- Container with max width and responsive padding -->
    <h1 class="text-center text-3xl font-semibold mb-6">Booking Details</h1>

    <div class="card shadow-lg border rounded-lg p-6">
      <div class="card-body">
        <h5 class="card-title text-xl font-medium mb-4">Booking Confirmation</h5>

        <div class="row mb-4">
          <div class="col-md-4 font-medium"><strong>Name:</strong></div>
          <div class="col-md-8"><%= @booking.user.first_name %> <%= @booking.user.last_name %></div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 font-medium"><strong>Phone:</strong></div>
          <div class="col-md-8"><%= @booking.phone %></div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 font-medium"><strong>Vehicle Type:</strong></div>
          <div class="col-md-8"><%= @booking.vehicle_type.name %></div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 font-medium"><strong>Service:</strong></div>
          <div class="col-md-8"><%= @booking.service.name %></div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 font-medium"><strong>Booking Date:</strong></div>
          <div class="col-md-8"><%= @booking.booking_datetime.strftime("%A, %d %B %Y at %H:%M") %></div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 font-medium"><strong>Price:</strong></div>
          <div class="col-md-8 text-lg font-semibold"><%= number_to_currency(@booking.price.price, precision: 2) %></div>
        </div>

        <div class="text-center mt-6">
          <%= link_to 'Go back', root_path, class: 'btn bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-4 py-2 rounded-lg transition-all focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 active:scale-95' %>
        </div>
      </div>
    </div>
  </div>
</div>
