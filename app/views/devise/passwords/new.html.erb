<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-3 sm:py-6 lg:py-8 flex justify-center">
    <h1 class="text-2xl font-medium leading-7 sm:text-xl sm:leading-9 lg:text-2xl lg:leading-10 tracking-tight", style="color: #16006C;">
      Forgot your password?
    </h1>
  </div>

  <div class="max-w-lg w-full mx-auto bg-white p-6 rounded-lg shadow-md border border-gray-200 mb-8">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-1" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-300",
            required: true %>
      </div>

      <div class="mb-6 mt-2">
        <%= f.submit "Send me",
            class: "poppins-medium button-colour text-white font-light px-4 py-1 rounded-lg cursor-pointer transition-all focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 active:scale-95" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
