<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-3 sm:py-6 lg:py-8 flex justify-center">
    <h1 class="text-2xl font-medium leading-7 text-gray-900 sm:text-xl sm:leading-9 lg:text-2xl lg:leading-10 tracking-tight">
      Change your password
    </h1>
  </div>

  <div class="max-w-lg w-full mx-auto"> <!-- Added this wrapper to limit width and center the form -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-1" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "New password", class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-600 block mb-1">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-600",
            required: true %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirm new password", class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-600",
            required: true %>
      </div>

      <div class="mb-6 mt-2">
        <%= f.submit "Change my password",
            class: "poppins-medium bg-indigo-600 hover:bg-indigo-700 text-white font-light px-4 py-2 rounded-lg cursor-pointer transition-all focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 active:scale-95" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
