<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-3 sm:py-6 lg:py-8 flex justify-center">
    <h1 class="text-2xl font-medium leading-7 text-gray-900 sm:text-xl sm:leading-9 lg:text-2xl lg:leading-10 tracking-tight">
      Sign up
    </h1>
  </div>

  <div class="max-w-lg w-full mx-auto bg-white p-6 rounded-lg shadow-md border border-gray-200 mb-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-1" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- First Name Field -->
      <div class="mb-4">
        <%= f.label :first_name, class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-300",
            required: true %>
      </div>

      <!-- Last Name Field -->
      <div class="mb-4">
        <%= f.label :last_name, class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <%= f.text_field :last_name, autocomplete: "family-name",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-300",
            required: true %>
      </div>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <%= f.email_field :email, autocomplete: "email",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-300",
            required: true %>
      </div>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <% if @minimum_password_length %>
        <em class="text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-300",
            required: true %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "poppins-medium block text-sm font-normal text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "border p-2 w-full rounded-xl shadow-sm border-gray-300",
            required: true %>
      </div>

      <!-- Submit Button -->
      <div class="mb-6 mt-2">
        <%= f.submit "Sign up", class: "poppins-medium bg-indigo-600 hover:bg-indigo-700 text-white font-light px-4 py-1 rounded-lg cursor-pointer transition-all focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 active:scale-95" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
